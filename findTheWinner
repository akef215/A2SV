class Solution(object):
    def findTheWinner(self, n, k):
        """
        :type n: int
        :type k: int
        :rtype: int
        """
        friends = [i+1 for i in range(n)]
        i = 0
        while len(friends) != 1:
            i = (i + k - 1) % len(friends)
            friends.pop(i)
            
        return friends[0]      
