class Solution(object):
    def matrixSum(self, nums):
        """
        :type nums: List[List[int]]
        :rtype: int
        """
        m = len(nums[0])
        ans = 0 
        for row in nums:
            row.sort()
        
        for _ in range(m):
            current_max = 0
            for row in nums:
                current_max = max(current_max, row.pop())
            ans += current_max
        
        return ans
